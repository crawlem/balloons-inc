<!doctype html>
<html class="no-js" lang="">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="x-ua-compatible" content="ie=edge">

		<title>Balloons Inc. | {{page.fields.title}}</title>

		<meta name=viewport content="width=device-width, initial-scale=1.0, user-scalable=no">
		<meta name="description" content="{{page.fields.intro}}">
		<meta name="keywords" content="<%=@document.keywords%>">
		<meta name="author" content="<%=@site.author%>">

		<link rel="apple-touch-icon" href="apple-touch-icon.png">
		
		<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700" rel="stylesheet">
		<link href="https://fonts.googleapis.com/css?family=Love+Ya+Like+A+Sister" rel="stylesheet">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/3.0.3/normalize.min.css">
		<link rel="stylesheet" href="/css/main.css">
	</head>
	<!-- Version {{page.sys.revision}} -->
	<body id="{{page.sys.id}}" class="{{page.sys.contentType.sys.id}} {{page.fields.alias}}">
		<div class="container">
			<header>
				<h1><a href="index.html">Balloons Inc.</a></h1>
				<nav>
					<h2>Main Menu</h2>
					<ul>
						<li class="burger"><a href="sitemap.html"><abbr title="All menu items">&#x2261;</abbr></a></li>
						<li>
							<ul>
								{{#each mainMenu.items}}
									{{#each fields.items}}
								        <li{{#equal page.sys.id sys.id}} class="current"{{/equal}}>
								            <a href="{{fields.alias}}.html">{{fields.title}}</a>
								        </li>
							        {{/each}}
							    {{/each}}
							</ul>
						</li>
						<li><a href="https://twitter.com/balloonsinc">Twitter</a></li>
						<li><a href="https://www.facebook.com/balloonsinc">Facebook</a></li>
					</ul>
				</nav>
			</header>

			<div class="carousel" style="background-image: url(https:{{ page.fields.headerImage.fields.file.url }})">
				<div class="carousel-content">
					<div class="carousel-logo"></div>
				</div>
			</div>

			<main>
				{{{ body }}}
			</main>

			{{#if page.fields.gallery}}
				<section class="gallery-{{page.fields.gallery.fields.prefix}}{{page.fields.gallery.fields.id}} gallery">
					<h2>Gallery</h2>
				</section>
			{{/if}}

			{{#if page.fields.showTestimonials}}
				<section class="testimonial">
					<h1>Testimonials</h1>
					<p>"I would definitely recommend Rich for your wedding, the parents will thank you for it and you end up with some very creative wedding pictures!" <a href="https://www.facebook.com/amystock/activity/10155803089735386">View</a></p>
				</section>
			{{/if}}

			<footer>
				<ul>
					{{#each footerMenu.items}}
						{{#each fields.items}}
					        <li{{#equal page.sys.id sys.id}} class="current"{{/equal}}>
					            <a href="{{fields.alias}}.html">{{fields.title}}</a>
					        </li>
				    	{{/each}}
				    {{/each}}
					<li>&copy; balloonsinc 2015-2016</li>
				</ul>
			</footer>
		</div>

		<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
        <script>window.jQuery || document.write('<script src="js/vendor/jquery-2.1.4.min.js"><\/script>')</script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/flickity/1.1.0/flickity.pkgd.min.js"></script>

        <script src="js/testimonials.js"></script>
        <script src="js/main.js"></script>

        <script>
            (function(b,o,i,l,e,r){b.GoogleAnalyticsObject=l;b[l]||(b[l]=
            function(){(b[l].q=b[l].q||[]).push(arguments)});b[l].l=+new Date;
            e=o.createElement(i);r=o.getElementsByTagName(i)[0];
            e.src='https://www.google-analytics.com/analytics.js';
            r.parentNode.insertBefore(e,r)}(window,document,'script','ga'));
            ga('create','UA-39475717-1','auto');ga('send','pageview');
        </script>
	</body>
</html>