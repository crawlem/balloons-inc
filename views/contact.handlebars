<section>
	<h2>{{page.fields.title}}</h2>
	{{#md page.fields.intro }}{{/md}}
</section>

<article>
	{{#md page.fields.body }}{{/md}}

	<div class="message invalid"></div>
	<form action="mail.php" method="post" class="contact-form">
		<div class="field field-inline">
			<label for="fld-name" class="required">Name</label>
			<input name="name" id="fld-name" required>
		</div>
		<div class="field field-inline">
			<label for="fld-email" class="required">Email</label>
			<input name="email" type="email" id="fld-email" required>
		</div>
		<div class="field field-inline">
			<label for="fld-phone">Phone</label>
			<input name="phone" id="fld-phone">
		</div>
		<div class="field field-inline">
			<label for="fld-venue">Venue</label>
			<input name="venue" id="fld-venue">
		</div>
		<div class="field field-inline">
			<label for="fld-date">Date</label>
			<input name="date" type="date" id="fld-date">
		</div>
		<div class="field field-inline">
			<label for="fld-time">Time</label>
			<input name="time" type="time" id="fld-time">
		</div>
		<div class="field">
			<label for="fld-message">Message</label>
			<textarea name="message" id="fld-message"></textarea>
		</div>
		<div class="buttons">
			<button type="submit">Send</button>
		</div>
	</form>
</article>